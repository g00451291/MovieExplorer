<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieExplorer"
    Title="Movie Explorer">

    <TabBar>
        <Tab Title="Browse" Icon="browse_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Favourites" Icon="fav_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:FavouritesPage}" />
        </Tab>

        <Tab Title="Settings" Icon="settings_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingPage}" />
        </Tab>
    </TabBar>
</Shell>
