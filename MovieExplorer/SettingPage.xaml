<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.SettingPage"
             Title="SettingPage">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="App Settings" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <HorizontalStackLayout Spacing="20">
            <Label Text="Dark Mode" VerticalOptions="Center" />
            <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled" />
        </HorizontalStackLayout>

        <VerticalStackLayout Spacing="10">
            <Label Text="Font Size" />
            <Slider x:Name="FontSizeSlider" 
                Minimum="12" Maximum="30" 
                Value="18"
                ValueChanged="OnFontSizeChanged" />
            <Label x:Name="FontSizeLabel" Text="Example Text Size" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>